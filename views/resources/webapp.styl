
#login
  position relative
  width 300px
  margin 100px auto
  td
    padding 10px
  button
    margin-right 10px

body
  font 12px Helvetica, Arial, sans-serif
  background: linear-gradient(to bottom, #efefef, white) no-repeat

h1
  font-size: 16
  color: #777

#headerDiv
  margin: 0 auto
  margin-bottom: 20px
  background: white
  box-shadow: 1px 0px 8px rgb(200, 200, 200)
  padding: 10px 0 10px 0

#headerDiv h1
  margin-left: 10px

.borderPadding
  padding: 20px
  background: #eeeeee
  border: 1px solid #bbbbbb

  border-radius: 10px
  -moz-border-radius: 10px
  -webkit-border-radius: 10px
